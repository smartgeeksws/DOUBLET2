<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvJugador1"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvJugador2"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/btn_jugar"
            android:layout_width="160dp"
            android:layout_height="160sp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_animado" />

        <ImageButton
            android:id="@+id/btn_puntajes"
            android:layout_width="160dp"
            android:layout_height="160sp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/btn_jugar"
            android:background="@drawable/btn_animado" />


        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="160dp"
            android:layout_height="160sp"
            android:layout_below="@id/btn_jugar"
            android:background="@drawable/btn_animado" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160sp"
            android:layout_below="@id/btn_puntajes"
            android:layout_toRightOf="@id/btn_config"
            android:id="@+id/btn_logo"
            android:background="@drawable/btn_animado"/>

</RelativeLayout>